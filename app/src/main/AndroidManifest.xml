<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.reservo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reservo"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".PhotoGallery"
            android:exported="false" />
        <activity
            android:name=".PaymentOptions"
            android:exported="false" />
        <activity
            android:name=".VoucherPrompt"
            android:exported="false" />
        <activity
            android:name=".RePass"
            android:exported="false" />
        <activity
            android:name=".OTP"
            android:exported="false" />
        <activity
            android:name=".ReservoLens"
            android:exported="false" />
        <activity
            android:name=".HomePage"
            android:exported="false" />
        <activity
            android:name=".MedHistory"
            android:exported="false" />
        <activity
            android:name=".RHealthIntro"
            android:exported="false" />
        <activity
            android:name=".ForgotPW"
            android:exported="false" />
        <activity
            android:name=".Signup"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>