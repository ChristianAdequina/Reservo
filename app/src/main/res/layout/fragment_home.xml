<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/reservoTitle"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:drawableStart="@drawable/reservo"
                android:fontFamily="@font/montserrat_medium"
                android:text=" Reservo"
                android:textColor="#000080"
                android:textSize="40sp" />

        </LinearLayout>



        <TextView
            android:id="@+id/textView3"
            android:layout_width="192dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="555dp"
            android:text="Welcome, User!"
            android:textAlignment="center"
            android:textColor="#0492c2"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            app:cardBackgroundColor="#B1E7FF"
            app:cardCornerRadius="35dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/otherblue">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="387dp"
                    android:layout_height="68dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=" What type of reservation would you like to make today?"
                    android:textAlignment="center"
                    android:textColor="#181813"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="5dp">

                            <ImageButton
                                android:id="@+id/reservofitness"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/btn"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/reservofitness"/>

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text=" ReservoFitness"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#181813" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp">

                            <ImageButton
                                android:id="@+id/reservohealth"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/btn"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/reservohealth"/>

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text=" ReservoHealth"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#181813" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp">

                            <ImageButton
                                android:id="@+id/reservolens"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/btn"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/reservolens"/>

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text=" ReservoLens"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#181813" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp">

                            <ImageButton
                                android:id="@+id/reservoglam"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/btn"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/reservoglam"/>

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="ReservoGlam"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#181813" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="25dp">

                            <ImageButton
                                android:id="@+id/reservofood"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/btn"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/reservofood"/>

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="ReservoFood"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#181813" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</FrameLayout>